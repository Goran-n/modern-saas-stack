# ============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION - REQUIRED VARIABLES ONLY
# ============================================================================

# Environment
NODE_ENV=production
LOG_LEVEL=error
PORT=5000
BASE_URL=https://api.yourdomain.com

# Database (REQUIRED)
DATABASE_URL=postgresql://username:password@host:port/database

# Supabase (REQUIRED)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Authentication (REQUIRED)
JWT_SECRET=your-production-jwt-secret-minimum-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Trigger.dev (REQUIRED)
TRIGGER_PROJECT_ID=your-project-id
TRIGGER_API_KEY=your-api-key

# Search Backend (REQUIRED - Choose ONE)
UPSTASH_VECTOR_REST_URL=your-vector-url
UPSTASH_VECTOR_REST_TOKEN=your-vector-token

# External Services (REQUIRED for supplier features)
SERPER_API_KEY=your-serper-key
FIRECRAWL_API_KEY=your-firecrawl-key

# Communication Channels (Configure as needed)
# Slack
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret

# WhatsApp/Twilio
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_WHATSAPP_NUMBER=+1234567890