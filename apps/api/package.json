{
  "name": "@kibly/api",
  "version": "1.0.0",
  "description": "Kibly API - tRPC backend with TypeScript and PostgreSQL",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "bun run validate:types && doppler run -- tsc",
    "build:bun": "bun run validate:types && doppler run -- bun build src/index.ts --outdir ./dist --target bun",
    "build:production": "NODE_ENV=production bun run validate:types && doppler run -- bun run build",
    "dev": "doppler run -- tsx --watch src/index.ts",
    "dev:bun": "bun run validate:types && bun --hot src/index.ts",
    "dev:doppler": "bun run validate:types && doppler run -- tsx --watch src/index.ts",
    "dev:doppler:bun": "bun run validate:types && doppler run -- bun --hot src/index.ts",
    "prestart": "bun run validate:types",
    "start": "node dist/index.js",
    "start:bun": "bun dist/index.js",
    "start:production": "NODE_ENV=production node dist/index.js",
    "start:safe": "bun run validate:types && bun run start",
    "validate:types": "doppler run -- bun run src/scripts/validate-types.ts",
    "script": "bun run validate:types && doppler run -- bun run",
    "script:safe": "bun run validate:types && doppler run -- bun run",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "doppler run -- bun test --timeout 30000",
    "test:unit": "doppler run -- bun test src/ --timeout 30000",
    "test:integration": "doppler run -- bun test tests/integration/ --timeout 60000",
    "test:e2e": "doppler run -- bun test tests/e2e/ --timeout 120000",
    "typecheck": "doppler run -- bun tsc --noEmit",
    "db:generate": "doppler run -- drizzle-kit generate",
    "db:migrate": "doppler run -- bun run src/scripts/migrate.ts",
    "db:seed": "doppler run -- bun run src/scripts/seed.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "test:redis": "doppler run -- bun run src/scripts/test-redis.ts",
    "check:env": "doppler run -- bun run src/scripts/check-env.ts",
    "sync:trigger": "doppler run -- tsx src/scripts/trigger-sync.ts",
    "sync:xero": "doppler run -- bun run src/scripts/sync-xero.ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.842.0",
    "@aws-sdk/s3-request-presigner": "^3.842.0",
    "@hono/node-server": "^1.15.0",
    "@kibly/shared-types": "workspace:*",
    "@kibly/shared-utils": "workspace:*",
    "@trpc/server": "^11.4.3",
    "@vepler/logger": "^3.0.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.56.0",
    "commander": "^14.0.0",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.3",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "postgres": "^3.4.7",
    "reflect-metadata": "^0.2.2",
    "uuid": "^11.1.0",
    "xero-node": "12.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@kibly/shared-config": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.30.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}