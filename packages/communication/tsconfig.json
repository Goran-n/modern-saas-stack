{
  "extends": "@figgy/tsconfig/base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react",
    "skipLibCheck": true,
    "types": [
      "node",
      "bun"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/**/*.tsx"
  ]
}
