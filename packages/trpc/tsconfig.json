{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "skipLibCheck": true,
    "noEmit": false,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@kibly/*": ["../*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}