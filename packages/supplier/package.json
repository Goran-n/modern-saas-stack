{
  "name": "@kibly/supplier",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Supplier management system with unified ingestion interface",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest",
    "test:unit": "vitest run src/__tests__/unit",
    "test:integration": "vitest run src/__tests__/integration",
    "test:watch": "vitest watch",
    "test:local": "docker compose -f ../../docker-compose.test.yml up -d && sleep 3 && TEST_DATABASE_URL=postgresql://test:test@localhost:5433/kibly_test vitest",
    "test:local:down": "docker compose -f ../../docker-compose.test.yml down -v"
  },
  "dependencies": {
    "@kibly/shared-db": "workspace:*",
    "@kibly/utils": "workspace:*",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  }
}