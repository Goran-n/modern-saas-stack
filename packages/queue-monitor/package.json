{
  "name": "@kibly/queue-monitor",
  "version": "1.0.0",
  "description": "Bull-board queue monitoring dashboard for Kibly",
  "main": "dist/index.js",
  "scripts": {
    "build": "doppler run -p kibly-be -c dev -- tsc",
    "dev": "doppler run -p kibly-be -c dev -- tsx --watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "doppler run -p kibly-be -c dev -- tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@bull-board/api": "^6.10.1",
    "@bull-board/express": "^6.10.1",
    "bullmq": "^5.56.0",
    "express": "^5.1.0",
    "ioredis": "^5.6.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}