{
  "name": "@figgy/ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./theme.css": "./theme.css",
    "./styles": "./src/styles/index.css"
  },
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src",
    "dist",
    "theme.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && npm run build:css",
    "build:css": "bunx postcss theme.css -o dist/theme.css",
    "build:vite": "vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "dependencies": {
    "@iconify/vue": "^5.0.0",
    "reka-ui": "^2.4.0",
    "@vueuse/core": "^13.5.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-themes": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/vue3": "^8.6.14",
    "@storybook/vue3-vite": "^8.6.14",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.1.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.1",
    "storybook": "^8.6.14",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.7.3",
    "vite": "^7.0.6",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.2.4",
    "vue": "^3.5.14",
    "vue-tsc": "^3.0.4"
  }
}
