{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "paths": {
      "@figgy/tenant": ["./packages/tenant/src"],
      "@figgy/shared-db": ["./packages/shared-db/src"],
      "@figgy/shared-auth": ["./packages/shared-auth/src"],
      "@figgy/utils": ["./packages/utils/src"]
    }
  }
}
