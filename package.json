{
  "name": "kibly",
  "version": "1.0.0",
  "private": true,
  "description": "Kibly - Full-stack boilerplate with Vue.js, tRPC, TypeScript, and PostgreSQL",
  "author": "Kibly Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.2.17",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter @kibly/api --filter @kibly/web",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "clean": "turbo run clean",
    "typecheck": "turbo run typecheck",
    "typecheck:strict": "bun run scripts/validate-strict.ts",
    "script": "bun run typecheck:strict && bun run",
    "script:api": "bun run typecheck:strict && cd apps/api && doppler run -- bun run",
    "script:safe": "bun run typecheck:strict && echo 'âœ… TypeScript validation passed' && bun run",
    "ci:api": "turbo run build --filter @kibly/api",
    "ci:web": "turbo run build --filter @kibly/web",
    "build:api": "turbo run build --filter @kibly/api",
    "build:web": "turbo run build --filter @kibly/web",
    "dev:api": "turbo run dev --filter @kibly/api",
    "dev:web": "doppler run -p kibly-web -c dev -- turbo run dev --filter @kibly/web",
    "dev:all": "concurrently --kill-others --kill-others-on-fail --prefix-colors \"auto\" --prefix \"[{index}] {name}:\" --names \"api,web,jobs\" \"bun dev:api\" \"bun dev:web\" \"bun dev:jobs\"",
    "dev:jobs": "turbo run dev --filter @kibly/jobs",
    "lint:api": "turbo run lint --filter @kibly/api",
    "lint:web": "turbo run lint --filter @kibly/web",
    "lint:tsc": "turbo run typecheck",
    "db:generate": "doppler run -- drizzle-kit generate",
    "db:push": "doppler run -- drizzle-kit push",
    "db:migrate": "doppler run -- drizzle-kit migrate",
    "db:studio": "doppler run -- drizzle-kit studio",
    "db:seed": "turbo run db:seed --filter @kibly/api",
    "dev:cleanup": "bun scripts/cleanup-dev.ts",
    "dev:clean": "bun scripts/cleanup-dev.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@turbo/gen": "^2.5.4",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.14.1",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.0",
    "drizzle-kit": "^0.31.4",
    "tsup": "^8.3.5",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@hono/node-server": "^1.14.0",
    "@hono/trpc-server": "^0.3.2",
    "@supabase/supabase-js": "^2.51.0",
    "@trpc/server": "^10.45.2",
    "hono": "^4.6.13",
    "jsonwebtoken": "^9.0.2",
    "superjson": "^2.2.2",
    "uuid": "^10.0.0",
    "zod": "^3.24.1"
  }
}
