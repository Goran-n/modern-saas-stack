{
  "name": "modern-saas-stack",
  "version": "1.0.0",
  "private": true,
  "description": "Modern SaaS Stack - Full-stack application with Vue.js, tRPC, TypeScript, and PostgreSQL",
  "author": "Modern SaaS Stack",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.2.19",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter @modern-saas-stack/api --filter @modern-saas-stack/web",
    "lint": "biome check .",
    "lint:fix": "biome check --fix .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "clean": "turbo run clean",
    "typecheck": "turbo run typecheck",
    "typecheck:strict": "bun run scripts/validate-strict.ts",
    "script": "bun run typecheck:strict && bun run",
    "script:api": "bun run typecheck:strict && cd apps/api && doppler run -- bun run",
    "script:safe": "bun run typecheck:strict && echo 'âœ… TypeScript validation passed' && bun run",
    "ci:api": "turbo run build --filter @modern-saas-stack/api",
    "ci:web": "turbo run build --filter @modern-saas-stack/web",
    "build:api": "turbo run build --filter @modern-saas-stack/api",
    "build:web": "turbo run build --filter @modern-saas-stack/web",
    "dev:api": "turbo run dev --filter @modern-saas-stack/api",
    "dev:web": "turbo run dev --filter @modern-saas-stack/web",
    "dev:website": "turbo run dev --filter @modern-saas-stack/website",
    "dev:all": "concurrently --kill-others --restart-tries 3 --restart-after 1000 --prefix-colors \"auto\" --prefix \"[{index}] {name}:\" --names \"api,web,jobs,website\" \"bun dev:api\" \"bun dev:web\" \"bun dev:jobs\" \"bun dev:website\"",
    "dev:jobs": "turbo run dev --filter @modern-saas-stack/jobs",
    "lint:api": "turbo run lint --filter @modern-saas-stack/api",
    "lint:web": "turbo run lint --filter @modern-saas-stack/web",
    "lint:tsc": "turbo run typecheck",
    "db:generate": "doppler run -- drizzle-kit generate",
    "db:push": "doppler run -- drizzle-kit push",
    "db:migrate": "doppler run -- drizzle-kit migrate",
    "db:studio": "doppler run -- drizzle-kit studio",
    "db:seed": "turbo run db:seed --filter @modern-saas-stack/api",
    "dev:cleanup": "bun dev-scripts/cleanup-dev.ts",
    "dev:clean": "bun dev-scripts/cleanup-dev.ts",
    "enrich": "bun run scripts/enrich-suppliers.ts",
    "thumbnails:check": "cd packages/file-manager && bun run thumbnails:check",
    "thumbnails:generate": "cd packages/file-manager && bun run thumbnails:generate"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@turbo/gen": "^2.5.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "@types/uuid": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@hono/node-server": "^1.17.1",
    "@hono/trpc-server": "^0.4.0",
    "@supabase/supabase-js": "^2.52.1",
    "@trpc/server": "^11.4.3",
    "@upstash/search": "^0.1.5",
    "hono": "^4.8.9",
    "jsonwebtoken": "^9.0.2",
    "superjson": "^2.2.2",
    "uuid": "^11.1.0",
    "zod": "^4.0.10"
  }
}
