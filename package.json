{
  "name": "kibly",
  "version": "1.0.0",
  "private": true,
  "description": "Kibly - Full-stack boilerplate with Vue.js, tRPC, TypeScript, and PostgreSQL",
  "author": "Kibly Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.2.17",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter @kibly/api --filter @kibly/web",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "clean": "turbo run clean",
    "typecheck": "turbo run typecheck",
    "typecheck:strict": "bun run scripts/validate-strict.ts",
    "script": "bun run typecheck:strict && bun run",
    "script:api": "bun run typecheck:strict && cd apps/api && doppler run -- bun run",
    "script:safe": "bun run typecheck:strict && echo 'âœ… TypeScript validation passed' && bun run",
    "ci:api": "turbo run build --filter @kibly/api",
    "ci:web": "turbo run build --filter @kibly/web",
    "build:api": "turbo run build --filter @kibly/api",
    "build:web": "turbo run build --filter @kibly/web",
    "dev:api": "turbo run dev --filter @kibly/api",
    "dev:web": "doppler run -p kibly-web -c dev -- turbo run dev --filter @kibly/web",
    "dev:monitor": "turbo run dev --filter @kibly/queue-monitor",
    "dev:all": "concurrently \"bun dev:api\" \"bun dev:web\" \"bun dev:monitor\"",
    "dev:with-monitor": "concurrently \"bun dev:api\" \"bun dev:web\" \"bun dev:monitor\"",
    "test:api": "turbo run test --filter @kibly/api",
    "test:web": "turbo run test --filter @kibly/web",
    "lint:api": "turbo run lint --filter @kibly/api",
    "lint:web": "turbo run lint --filter @kibly/web",
    "lint:tsc": "turbo run typecheck",
    "db:migrate": "turbo run db:migrate --filter @kibly/api",
    "db:seed": "turbo run db:seed --filter @kibly/api"
  },
  "devDependencies": {
    "@turbo/gen": "^2.5.4",
    "@types/jsonwebtoken": "^9.0.10",
    "concurrently": "^9.2.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@supabase/supabase-js": "^2.50.2",
    "jsonwebtoken": "^9.0.2"
  }
}