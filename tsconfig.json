{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@my-app/api/*": ["./apps/api/src/*"],
      "@my-app/web/*": ["./apps/web/src/*"],
      "@my-app/config/*": ["./packages/config/src/*"],
      "@my-app/shared-db/*": ["./packages/shared-db/src/*"],
      "@my-app/trpc/*": ["./packages/trpc/src/*"],
      "@my-app/types/*": ["./packages/types/src/*"],
      "@my-app/ui/*": ["./packages/ui/src/*"],
      "@my-app/utils/*": ["./packages/utils/src/*"]
    }
  },
  "references": [
    {
      "path": "./apps/api"
    },
    {
      "path": "./apps/web"
    }
  ],
  "files": [],
  "include": [],
  "exclude": ["node_modules", "**/dist", "**/build", "**/.next"]
}