{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", ".nuxt/**", ".output/**", ".wxt/**"],
      "env": ["NODE_ENV", "VITE_*"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "lint:check": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "format:check": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "typecheck:strict": {
      "cache": false,
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:seed": {
      "dependsOn": ["db:migrate"],
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": ["package.json", "bun.lockb", "turbo.json", ".env*"],
  "globalEnv": ["NODE_ENV", "DATABASE_URL", "LOG_LEVEL", "PORT", "HOST", "VITE_SUPABASE_URL", "VITE_SUPABASE_ANON_KEY", "VITE_API_URL", "VITE_APP_URL"]
}
